<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/home_goods_gridview_img_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/home_goods_gridview_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂定"
            android:textColor="@color/basic_text_color"
            android:textSize="15dp"
            android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_goods_gridview_discount_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="打折价格"
            android:textColor="@color/price_text_color"
            android:textSize="10dp"
            android:layout_margin="5dp" />
        <TextView
            android:id="@+id/home_goods_gridview_price_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="本身价格"
            android:textColor="@color/discount_text_color"
            android:textSize="10dp"
            android:layout_margin="5dp" />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
